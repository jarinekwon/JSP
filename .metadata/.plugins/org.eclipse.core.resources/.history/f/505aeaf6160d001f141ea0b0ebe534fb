package chapter04;


class SongInfo {
	String title;
	String artist;
	int year;
	String country;
	
	public SongInfo(String title, String artist, int year, String country) {
		this.title = title;
		this.artist = artist;
		this.year = year;
		this.country = country;
	}
	
	void show() {
		System.out.println(year + "년 " + country + "국적의 " + artist + "가 부른 " + title);
	}
}

public class Song2 {
	public static void main(String[] args) {
		
		SongInfo DancingQueen = new SongInfo("Dancing Queen", "ABBA", 1978, "스웨덴");
		DancingQueen.show();
	}
	
}
